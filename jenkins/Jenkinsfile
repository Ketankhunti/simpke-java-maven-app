pipeline{
    agent any

    tools {
    maven 'Test Maven'
    }

    stages {
        stage('build') {
            steps{ 
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('test') {

            parallel{
                stage('unit test'){
                    steps{
                        echo 'running unit test'
                    }
                }
                stage('integration test'){
                    steps{
                        echo 'running integration test'
                    }
                }
            }

             post {
                success {
                    archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
                }
                failure {
                    echo 'build failed'
                }
            }
        }
        stage('deploy') {
            steps{
                echo 'deploying the application'
            }
        }
        
    }
}